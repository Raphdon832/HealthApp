rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read/write their own chat images
    match /chat-images/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to read all chat images (for receiving images from others)
    match /chat-images/{allPaths=**} {
      allow read: if request.auth != null;
    }

    // For development/testing: allow all authenticated users to upload to chat-images
    // Remove this rule in production and use the specific user rules above
    match /chat-images/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}