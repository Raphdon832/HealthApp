rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read/write their own chat images
    match /chat-images/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to read all chat images (for receiving images from others)
    match /chat-images/{allPaths=**} {
      allow read: if request.auth != null;
    }
  }
}