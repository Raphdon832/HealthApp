rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read/write chat images in thread folders
    match /chat-images/{threadId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Allow authenticated users to read/write their own chat images (legacy support)
    match /chat-images/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to read all chat images (for receiving images from others)
    match /chat-images/{allPaths=**} {
      allow read: if request.auth != null;
    }

    // Allow pharmacy users to upload product images
    match /products/{pharmacyId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Allow all authenticated users to read product images
    match /products/{allPaths=**} {
      allow read: if request.auth != null;
    }

    // Allow authenticated users to upload info card images
    match /info-cards/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}